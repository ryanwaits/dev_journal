<section class="hero is-medium">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-fullwidth" style="background: #fff; padding: 5%; border: 2px solid rgba(0, 0, 0, 0.1); margin: 2.5%;">
          <h1 class="subtitle" style="font-weight: bold;">
            Create a task
          </h1>
          <%= form_for @task, url: tasks_path do |f| %>

            <!-- Check errors -->
              <% if @task.errors.any? %>
                <h1 class="subtitle" style="font-weight: bold;"><%= pluralize(@task.errors.count, 'error') %></h1>
                <% @task.errors.full_messages.each do |message| %>
                  <p class="control"><%= message %></p>
                <% end %>
              <% end %>
            <!-- /errors -->

            <p class="control">
              <%= f.select :level, options_for_select([1, 2, 3]), {prompt: 'Level'}, class: 'select is-medium' %>
            </p>
            <p class="control">
              <%= f.text_field :name, class: 'task input is-large', placeholder: 'Description' %>
            </p>
            <p class="control">
              <%= f.submit 'Create task', class: 'button is-large is-primary' %>
            </p>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</section>